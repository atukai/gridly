{
    "name": "atukai/gridly",
    "description": "Gridly - PHP Grid Manager",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/atukai/gridly",
    "authors": [
        {
            "name": "Alexander Tukai",
            "email": "atukai@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "psr/http-message": "^1.0.1",
        "symfony/config": "^6.1",
        "symfony/yaml": "^6.1"
    },
    "require-dev": {
        "doctrine/collections": "^1.8",
        "doctrine/dbal": "^3.4",
        "doctrine/orm": "^2.13",
        "laminas/laminas-db": "^2.16",
        "laminas/laminas-paginator": "^2.17",
        "laminas/laminas-paginator-adapter-laminasdb": "^1.3",
        "pagerfanta/pagerfanta": "^3.7",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "symfony/console": "^6.1",
        "twig/twig": "^3.4.0"
    },
    "autoload": {
        "psr-4": {
            "Gridly\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gridly\\Test\\": "tests/"
        }
    }
}
